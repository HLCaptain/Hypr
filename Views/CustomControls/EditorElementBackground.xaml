<UserControl
    x:Class="HyprWinUI3.Views.CustomControls.EditorElementBackground"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:HyprWinUI3.Views.CustomControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid PointerMoved="Element_PointerMoved">
        <Rectangle
            Fill="{ThemeResource SystemControlBaseLowAcrylicWindowBrush}"
            PointerExited="Element_PointerExited"
            PointerPressed="Element_PointerPressed"
            PointerReleased="Element_PointerReleased"
            RadiusX="8"
            RadiusY="8" />
    </Grid>
</UserControl>
