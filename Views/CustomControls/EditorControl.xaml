<UserControl
    x:Class="HyprWinUI3.Views.CustomControls.EditorControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Custom="using:Microsoft.UI.Xaml.Controls"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:HyprWinUI3.Views.CustomControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <SplitView IsPaneOpen="True" PanePlacement="Right">
            <local:EditorCanvasControl />
            <SplitView.Pane>
                <Grid>
                    <local:EditorTreeControl />
                </Grid>
            </SplitView.Pane>
        </SplitView>
        <local:ToolbarControl
            Width="144"
            Height="288"
            Margin="10,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />

    </Grid>
</UserControl>
